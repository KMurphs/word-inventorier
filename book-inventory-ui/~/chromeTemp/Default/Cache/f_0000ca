    if(loadClicky) loadClicky();
    if(loadGA) loadGA();
    if(loadCommento) loadCommento();
  }

  if (window.addEventListener) {
    window.addEventListener("load", loadJS, false);
  } else if (window.attachEvent) {
    window.attachEvent("onload", loadJS);
  } else {
    window.onload = loadJS;
  }
</script>



</body>
</html>
